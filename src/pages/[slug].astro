---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
});
---

<BaseLayout
  title={`${post.data.title} | Alberto Pou`}
  description={post.data.description}
>
  <article class="prose">
    <h1 class="!mt-0 !text-2xl">{post.data.title}</h1>
    <p class="subtitle">{formattedDate} - Alberto Pou</p>
    {
      post.data.heroImage && (
        <img
          src={post.data.heroImage}
          alt={post.data.title}
          class="w-full h-auto mt-6 mb-8 rounded-lg shadow-md"
        />
      )
    }
    <Content />
  </article>

  <Footer />

  <dialog
    id="image-dialog"
    class="fixed inset-0 z-50 w-full h-full max-w-none max-h-none p-0 m-0 bg-transparent backdrop:bg-black/90 outline-none"
  >
    <div class="relative w-full h-full flex items-center justify-center">
      <img
        id="dialog-img"
        src=""
        alt=""
        class="max-w-full max-h-[90vh] object-contain select-none"
      />
      <button
        id="close-dialog"
        class="absolute top-4 right-4 text-white bg-black/60 rounded-full p-2 hover:bg-black/80 transition-colors focus:outline-none cursor-pointer"
        aria-label="Close image"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-x"
          ><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg
        >
      </button>
    </div>
  </dialog>
</BaseLayout>

<script>
  // Make all external links open in new tab
  document.querySelectorAll(".prose a").forEach((link) => {
    const href = link.getAttribute("href");
    if (href && (href.startsWith("http://") || href.startsWith("https://"))) {
      link.setAttribute("target", "_blank");
      link.setAttribute("rel", "noopener noreferrer");
    }
  });

  // Image Lightbox Logic
  const dialog = document.getElementById(
    "image-dialog",
  ) as HTMLDialogElement | null;
  const dialogImg = document.getElementById(
    "dialog-img",
  ) as HTMLImageElement | null;
  const closeBtn = document.getElementById("close-dialog");

  if (dialog && dialogImg && closeBtn) {
    document.querySelectorAll(".prose img").forEach((img) => {
      const imgElement = img as HTMLImageElement;
      // Add zoom-in cursor to indicate it's clickable
      imgElement.classList.add(
        "cursor-zoom-in",
        "transition-opacity",
        "hover:opacity-90",
      );

      imgElement.addEventListener("click", () => {
        dialogImg.src = imgElement.src;
        dialogImg.alt = imgElement.alt;
        dialog.showModal();
        document.body.style.overflow = "hidden"; // Prevent background scrolling
      });
    });

    const closeDialog = () => {
      dialog.close();
      document.body.style.overflow = ""; // Restore scrolling
    };

    closeBtn.addEventListener("click", closeDialog);

    dialog.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      // Close if clicking the backdrop (dialog itself) but not the image
      if (target === dialog || target.closest(".relative") === target) {
        closeDialog();
      }
    });

    // Also close on hitting the empty space around the image in the wrapper div
    const wrapperDiv = dialog.querySelector("div");
    if (wrapperDiv) {
      wrapperDiv.addEventListener("click", (e) => {
        if (e.target === e.currentTarget) closeDialog();
      });
    }
  }
</script>

<script type="module">
  import mermaid from "https://cdn.jsdelivr.net/npm/mermaid@11/dist/mermaid.esm.min.mjs";

  const initMermaid = async () => {
    const isDark = window.matchMedia("(prefers-color-scheme: dark)").matches;

    mermaid.initialize({
      startOnLoad: false,
      theme: isDark ? "dark" : "default",
      themeVariables: {
        fontFamily: "'Helvetica Neue', Helvetica, Arial, sans-serif",
        fontSize: "16px",
        edgeLabelBackground: "transparent",
      },
    });

    const mermaidPres = document.querySelectorAll(
      "pre[data-language='mermaid']",
    );

    if (mermaidPres.length > 0) {
      // Clear previous renders if any (though for static content this might be overkill, good for robustness)
      // Actually, we replace the `pre` so we can't easily re-render in place without reloading.
      // For this blog, just handling the initial load is sufficient as re-rendering wiped DOM is complex.
      // However, we can at least set the right theme on load.

      mermaidPres.forEach((pre) => {
        // Check if we already processed this one (in case of some re-run logic, though here it's fresh script)
        if (pre.getAttribute("data-processed")) return;

        const div = document.createElement("div");
        div.className = "mermaid";
        div.textContent = pre.textContent;
        pre.replaceWith(div);
        pre.setAttribute("data-processed", "true"); // in case we keep the pre reference somewhere, but replaceWith removes it from DOM.
      });

      await mermaid.run();
    }
  };

  initMermaid();

  // Add a listener to re-render if the preference changes
  window
    .matchMedia("(prefers-color-scheme: dark)")
    .addEventListener("change", initMermaid);
</script>
